<div class="row">
  <div class="col-md-4 offset-md-3">
    <h1 class="mb-4">New Account</h1>
    <%= form_for @user do |f| %>
      <div>
        <%= f.text_field :first_name, class: "form-control mb-2", placeholder: "First Name" %>
      </div>
      <div>
        <%= f.text_field :last_name, class: "form-control mb-2", placeholder: "Last Name" %>
      </div>
      <div>
        <%= f.text_field :email, class: "form-control mb-2", placeholder: "Email" %>
      </div>
      <div>
        <%= f.password_field :password, class: "form-control mb-2", placeholder: "Password" %>
      </div>
      <%= f.submit "Sign Up", class: "btn btn-info float-right" %>
    <% end %>
  </div>
</div>
