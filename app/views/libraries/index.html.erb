<div class="row">
  <div class="col-8 offset-2">
    <%= link_to "New Library", new_library_path, class: "btn btn-primary float-right mb-4" %>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <% @libraries.each do |library| %>
      <div class="mb-5">
        <h3><%= link_to library.name, library_path(library) %></h3>
        <% if current_user && library.users != @members  %>
          <%= button_to "Join", library_users_path(library), class: "btn btn-info" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
